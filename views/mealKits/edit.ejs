<head>
    <link rel="stylesheet" href="/css/edit.css">
</head>
<main>
    <div class="container">
        <h2>Update MealKit information</h2> <!-- Add the title here -->

<form method="post" action="/mealKits/edit/<%=mealKit._id%>" enctype="multipart/form-data" class="form-group">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="<%= mealKit.title %>" required/><br /><br />

    <label for="includes">Includes:</label>
    <input type="text" name="includes" id="includes" value="<%= mealKit.includes %>"  required/><br /><br />

    <label for="description">Description:</label>
    <textarea name="description" id="description" required><%= mealKit.description %></textarea><br><br>

    <label for="category">Category:</label>
    <input type="text" name="category" id="category"  value="<%= mealKit.category %>"  required/><br /><br />

    <label for="price">Price:</label>
    <input type="number" min="0.0" step="0.01" name="price" id="price" value="<%= mealKit.price %>" required/><br /><br />

    <label for="cookingTime">Cooking Time:</label>
    <input type="number" min="0" name="cookingTime" id="cookingTime" value="<%= mealKit.cookingTime %>" required /><br /><br />

    <label for="servings">Servings:</label>
    <input type="number" min="0" name="servings" id="servings" value="<%= mealKit.servings %>" required /><br /><br />

    <label for="imageUrl">Image:</label>
    <input type="file" name="imageUrl" id="imageUrl" value="<%= mealKit.imageUrl %>" required/><br /><br />
    
    <label for="featuredMealKit">Featured MealKit:</label>
    <div class="checkbox-container">
        <input type="checkbox" name="featuredMealKit" id="featuredMealKit" <% if (mealKit.featuredMealKit === true) { %> checked <% } %> />
        <span class="checkbox-custom"></span>
    </div>
    
   
   
    <button class="button-8">Update</button>
    
   
</form>
</div>
</main>